<%- include("partials/header") %> 


<main class="">
    <section class="post-page main">
      <div class="container row">
        <h1 class="center"><%= category %> </h1>
        <% for( let i = 0; i < posts.length; i++ ) { %>
          <% if (i%2 === 0) { %>
            <div class="card medium col l5 s12">
              <div class="card-image waves-effect waves-block waves-light">
                <img class="materialboxed responsive-img" src="<%=posts[i].image%> " >
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"><%=posts[i].recipeName%> <i class="material-icons right">more_vert</i></span>
                <p><a href="/post/<%=posts[i]._id%> ">Click Me To Cook Me</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Description<i class="material-icons right">close</i></span>
                <p><%= posts[i].description %> </p>
                <p>Likes: <%= posts[i].likes %> </p>			

              </div>
            </div>	  
          <% } else {%>
            <div class="card medium sub col offset-l2 l5 s12">
              <div class="card-image waves-effect waves-block waves-light">
                <img class="materialboxed responsive-img" src="<%=posts[i].image%> " >
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"><%=posts[i].recipeName%> <i class="material-icons right">more_vert</i></span>
                <p><a href="/post/<%=posts[i]._id%> ">Click Me To Cook Me</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Description<i class="material-icons right">close</i></span>
                <p><%=posts[i].description%> </p>
                <p>Likes: <%= posts[i].likes %> </p>			
              </div>
            </div>
          <% } %> 
        <% } %>

      </div>
    </section>
</main>

<%- include("partials/footer") %> 



